<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
>

        <TextView
            android:id="@+id/resturantName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:lines="1"
            android:text="Wafaqi Colony"
            android:textColor="#000000"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ratingResturant"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"
            android:layout_below="@+id/resturantName"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="15dp"
            android:alpha="0.8"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="Rating: "
            android:textColor="#000000"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addressResturant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingResturant"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="15dp"
            android:text=""
            android:alpha="0.8"
            android:textColor="#000000"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_13sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/right_arrow_bold" />

    </RelativeLayout>

</RelativeLayout>